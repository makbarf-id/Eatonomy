<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom card style -->
    <style name="Widget.Eatonomy.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <!-- Custom text input style -->
    <style name="Widget.Eatonomy.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="Widget.Eatonomy.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.Eatonomy.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.Eatonomy.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemHorizontalPadding">24dp</item>
        <item name="itemVerticalPadding">12dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconPadding">16dp</item>
        <item name="android:background">@drawable/nav_drawer_background</item>
        <item name="android:background">@color/surface</item>
        <item name="itemTextAppearance">@style/TextAppearance.Eatonomy.NavItem</item>
    </style>

    <style name="TextAppearance.Eatonomy.NavHeader.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Eatonomy.NavHeader.Subtitle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="TextAppearance.Eatonomy.NavItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>
</resources> 